# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_size = 2
indent_style = space

[{*.py,*.json,*.sh,Makefile}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4 

[{*.sh,Makefile}]
indent_style = tab
tab_width = 4

[Vagrantfile]
indent_style = space
indent_size = 2
